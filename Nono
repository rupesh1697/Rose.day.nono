<div id="game" class="screen">
  <h3>7 Hearts, One Love</h3>
  <div id="hearts"></div>
  <div class="reveal" id="message"></div>
</div>

<script>
let day = 0;
const messages = [
  "Some flowers fade.<br>Some become home.",
  "You already chose me once.<br>I still choose you every day.",
  "Sweet things are nice.<br>But you calm me.",
  "Some hugs fix things<br>words never can.",
  "I won‚Äôt promise perfection.<br>Only presence.",
  "This‚Ä¶ this is where<br>I want you to feel safe.",
  "Loving you isn‚Äôt loud.<br>It‚Äôs steady.<br>It feels like home.<br><br>Happy Valentine Week ‚ù§Ô∏è"
];

function startGame() {
  document.getElementById('welcome').classList.remove('active');
  document.getElementById('game').classList.add('active');
  renderHearts();
}

function renderHearts() {
  const container = document.getElementById('hearts');
  container.innerHTML = "";
  for (let i = 0; i < 7; i++) {
    const h = document.createElement("span");
    h.innerHTML = "‚ù§Ô∏è";
    h.className = "heart " + (i === day ? "active" : "");
    if (i === day) h.onclick = nextHeart;
    container.appendChild(h);
  }
}

function nextHeart() {
  document.getElementById('message').innerHTML = messages[day];
  day++;
  if (day < 7) renderHearts();
}
</script>

